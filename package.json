{
  "name": "react-scrolly",
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "start": "npm run clean && npm run dev",
    "dev": "docz dev --port 5000",
    "clean": "lerna run --parallel clean",
    "build:doc": "docz build",
    "prepublish": "lerna run prepublish && npm run build:doc",
    "lint": "lerna run lint --parallel --stream",
    "bumpversion": "lerna version --no-push --no-git-tag-version",
    "lerna": "lerna",
    "release": "lerna publish from-package --yes --no-push --no-git-tag-version",
    "release:beta": "lerna publish --no-push --no-git-tag-version --preid=beta --npm-tag=prerelease",
    "release:canary": "lerna publish --canary --yes",
    "deploy": "DOCZ_BASE=/react-scrolly/ npm run build:doc && gh-pages -d .docz/dist",
    "test": "jest ./packages --config=config/jest.config.js --coverage",
    "test:watch": "jest ./packages --watch --config=config/jest.config.js"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^10.12.18",
    "@types/react": "^16.8.10",
    "@types/styled-components": "4.1.8",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "gh-pages": "^2.0.1",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "npm-run-all": "^4.1.5",
    "polish": "^0.2.3",
    "prop-types": "^15.7.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-spring": "^8.0.18",
    "rimraf": "^2.6.3",
    "styled-components": "^4.1.3",
    "styled-media-query": "^2.1.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-react": "^3.6.0",
    "tslint-react-hooks": "^1.1.0",
    "typescript": "^3.5.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "resolutions": {
    "ansi-styles": "^3.2.0"
  }
}
